{
  "expo": {
    "name": "StyleAdvisor AI",
    "slug": "styleadvisor-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "styleadvisor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.styleadvisor.ai",
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos for outfit analysis",
        "NSPhotoLibraryUsageDescription": "Select photos for outfit analysis",
        "NSPhotoLibraryAddUsageDescription": "Save analyzed outfits to gallery"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#7C3AED"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.styleadvisor.ai",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#7C3AED"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow StyleAdvisor AI to access your camera for outfit photos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow StyleAdvisor AI to access your photos for outfit analysis."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "styleadvisor-ai"
      }
    }
  }
}
